<% if listings.blank? %>
  No listings to display! Go <%= link_to 'create one', new_listing_path %>.
<% else %>
  <table class="table table-striped">
    <tbody>
      <% listings.each do |listing| %>
        <tr>
          <td><%= link_to listing.title, listing %></td>
          <td class="text-right">
          Posted <%= time_ago_in_words(listing.created_at) %> ago.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
